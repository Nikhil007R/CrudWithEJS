<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10">

        <div class="nav mb-10">
            <a class="text-blue-500" href="/">Back to home </a>
        </div>

        <h1 class="text-white text-2xl font-bold tracking-tighter mb-3">All Users</h1>

        <div class="users flex flex-wrap gap-3"> 

            <% if(users.length > 0){ %>
                <% users.forEach((user)=>{ %>
                        <div class="user w-72 p-4 rounded-lg bg-zinc-800">
                            <div class="w-full h-52 bg-zinc-700 rounded-lg overflow-hidden">
                                <img class="w-full h-full object-cover " src="<%= user.image %>" alt="">
                            </div>
                            <h3 class="text-xl mt-3 tracking-tighter text-white"><%= user.name %></h3>
                            <h5 class="tracking-tighter font-bold text-zinc-400"><%= user.email %></h5>
                            <div class="flex gap-3 mt-2">
                                <a class="text-zinc-400 tracking-tighter" href="/edit/<%= user._id %>">Edit User</a>
                                <a class="text-zinc-400 tracking-tighter" href="/">Create User</a>
                                <a class="text-red-400 tracking-tighter" href="/delete/<%= user.id %>">Delete User</a>
                            </div>
                        </div>
                <% }) %>


            <% } else { %>
                <h3 class="text-green-500">No Users yet !!</h3>
            <% } %>
